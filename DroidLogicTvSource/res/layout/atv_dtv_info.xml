<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/bg_info" >
    <TextView
	    android:id="@+id/ad_info_name"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center_horizontal"
	    android:layout_marginTop="@dimen/info_title_margin_top"
	    android:textColor="@color/source_info_name"
	    android:textSize="@dimen/text_size_info_ad_name" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/info_content_margin_top"
        android:orientation="horizontal">
	    <TextView
	        android:id="@+id/ad_info_number"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="@dimen/info_number_margin_left"
	        android:textColor="@color/source_info_number"
	        android:textSize="@dimen/text_size_info_ad_number" />
	    <TextView
            android:id="@+id/ad_info_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/info_name_margin_left"
            android:layout_marginRight="@dimen/info_name_margin_right"
            android:layout_centerVertical="true"
            android:textColor="@color/source_info_value"
            android:textSize="@dimen/text_size_info_ad_value"
            android:singleLine="true"/>
    </RelativeLayout>
</LinearLayout>
